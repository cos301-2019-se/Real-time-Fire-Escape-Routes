<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:onClick="screenTapped"
    tools:context=".landingPage">

    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:scrollbars="vertical"
        android:gravity="bottom"
        android:visibility="gone"
        tools:layout_conversion_wrapHeight="71"
        tools:layout_conversion_wrapWidth="0" />

    <Button
        android:id="@+id/button_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:padding="10dp"
        android:visibility="gone"
        android:background="@color/Grey"
        android:text="check status" />

    <TextView
        android:id="@+id/text_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_status"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/ubuntu_light"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fontFamily="@font/fjalla_one"
        android:visibility="visible"
        android:inputType="textCapWords"
        android:textAlignment="center"
        android:textSize="100dp"
        android:textColor="@android:color/black"
        />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/image_loading"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:visibility="gone"
        android:src="@drawable/loading" />

    <TextView
        android:id="@+id/text_simulation"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="simulation"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/Grey"
        android:textColor="@color/White" />

    <RelativeLayout
        android:id="@+id/layout_login"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="264dp"
            android:layout_height="372dp"
            android:visibility="visible"
            android:layout_above="@+id/text_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="9dp"
            android:src="@drawable/fire" />

        <TextView
            android:id="@+id/text_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/input_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="21dp"
            android:fontFamily="@font/fjalla_one"
            android:text="Firewatch"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:fontFamily="@font/ubuntu_light"
            android:textAlignment="center"
            android:hint="Enter your username"
            android:text="kinson@gmail.com"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray" />

        <Button
            android:id="@+id/button_parse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="29dp"
            android:background="@color/Red"
            android:text="login" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </RelativeLayout>
</RelativeLayout>

